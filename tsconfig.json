{
    "compilerOptions": {
      "target": "ES2020", // Use a modern version of JavaScript for async/await support
      "module": "CommonJS", // Node.js uses CommonJS module resolution
      "strict": true, // Enable all strict type-checking options
      "esModuleInterop": true, // Allows default imports for CommonJS modules
      "moduleResolution": "node", // Resolves modules in the Node.js style
      "outDir": "./dist", // Optional: Output directory for compiled files
      "rootDir": "./", // Define the root folder for TypeScript files
      "resolveJsonModule": true, // Allows importing JSON files
      "skipLibCheck": true, // Skips type checking of declaration files for faster compilation
      "baseUrl": "./", // Set base URL for resolving non-relative module imports
      "paths": {
        "*": ["node_modules/*"], // Resolve all modules from `node_modules`
      },
      "types": ["node"], // Include Node.js types
      "allowJs": true, // Allow JavaScript files to be imported
      "noImplicitAny": false // Optional: Allow implicit `any` types (if necessary)
    },
    "include": ["./**/*.ts"], // Include all TypeScript files in the project
    "exclude": ["node_modules", "./dist"] // Exclude these directories from compilation
  }
  